{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-livekit-with-custom-sharescreen-ui",
  "version": "0.1.0",
  "identifier": "com.xxidbr9.tauri-livekit",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "url": "#/meeting",
        "title": "LiveKit Meeting",
        "width": 480,
        "height": 600,
        "closable": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "transparent": true,
        "decorations": false,
        "shadow": false,
        "devtools": true
      }
    ],
    "security": {
      "dangerousDisableAssetCspModification": true,
      "csp": "default-src * asset:; script-src * 'unsafe-inline' 'unsafe-eval' http: https: asset://localhost/; style-src * 'unsafe-inline' http: https: asset://localhost/; img-src * data: blob:; connect-src * ws: wss: http: https: asset://localhost/ blob:; media-src * blob:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
